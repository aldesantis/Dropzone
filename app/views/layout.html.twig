{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ web_root }}/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="{{ web_root }}/assets/dropzone/css/style.css">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ web_root }}/assets/jquery/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="{{ web_root }}/assets/bootstrap/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
    <div class="container">
        {% block contents %}{% endblock %}

        <hr>

        <footer>
            <p>
                Made with <a href="http://silex-project.org">Silex</a>,
                <a href="https://github.com/weixiyen/jquery-filedrop">jQuery filedrop</a>
                and <a href="http://twitter.github.com/bootstrap/">Twitter Bootstrap</a>.
            </p>
        </footer>
    </div>
{% endblock %}
