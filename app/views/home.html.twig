{% extends "layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    
    <script type="text/javascript" src="{{ web_root }}/assets/jquery-filedrop/jquery.filedrop.js"></script>
    <script type="text/javascript" src="{{ web_root }}/assets/dropzone/js/upload.js"></script>
    <script type="text/javascript">
        window['upload_url'] = "{{ path('upload') }}";
        window['max_files'] = {{ app.config.files.max_number }};
        window['max_size'] = {{ app.config.files.max_size }};
    </script>
{% endblock %}

{% block contents %}
    <div class="span12" id="main">
        <div class="well" id="dropzone">
            <h1>Drag your files here!</h1>
            <h2>(or choose them via the ol' way)</h2>
            <hr>
            <p><input type="file" id="file" multiple></p>
        </div>
    
        <table id="files" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="45%">File name</th>
                    <th width="10%">File size</th>
                    <th width="10%">Speed</th>
                    <th width="35%">Progress</th>
                </tr>
            </thead>
            
            <tbody>
            </tbody>
        </table>
    </div>
{% endblock %}
